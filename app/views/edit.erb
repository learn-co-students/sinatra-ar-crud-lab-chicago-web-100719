<h1>Edit Article</h1>

<form action="/articles/<%= @article.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    Title: <input type="text" id="title" name="article[title]" value= <%= @article.title %>>
    Content: <input type= "text" id="content" name="article[content]" value= <%= @article.content %>>
    <input type="submit" value="Submit">
</form>